@{
    ViewData["Title"] = "Створити Cookies";
}

<h2>Створити Cookies</h2>

<form asp-action="Create" method="post">
    <div>
        <label for="value">Значення Cookies:</label>
        <input type="text" id="value" name="value" required />
    </div>
    <div>
        <label for="expirationDate">Дата та час закінчення Cookies:</label>
        <input type="datetime-local" id="expirationDate" name="expirationDate" required />
    </div>
    <div>
        <button type="submit">Зберегти в Cookies</button>
    </div>
</form>
